<div id="post-form">
	<%= form_for(@post) do |f|%>
  <p>
    <%= f.text_field :title, placeholder: "Post title" %>
  </p>
  <p>
    <%= f.text_area :desc, class: "post-form-desc", placeholder: "Post decription" %>
  </p>
  <p>
    <%= f.text_area :body, class: "post-form-body" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
