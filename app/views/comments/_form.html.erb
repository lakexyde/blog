<%= form_for([@post, @post.comments.build]) do |f|%>
  <p>
    <%= f.label :author%>
    <%= f.text_field :author%>
  </p>
  <p>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>